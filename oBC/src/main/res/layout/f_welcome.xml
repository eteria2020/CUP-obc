<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/fwcm_whole_RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3ea447" >
    
    <View android:id="@+id/fwel_top_V"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentTop="true"
        android:background="#fdee66" />
    
    <View android:id="@+id/fwel_bottom_V"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:background="#fdee66" />
    
    <FrameLayout android:id="@+id/fwel_logo_FL"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_below="@+id/fwel_top_V"
        android:background="#090808" >
        
        <ImageView android:id="@+id/fwelLogoIV"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:src="@drawable/logo_welcome"
        	android:contentDescription="@string/content_description" />
        
    </FrameLayout>

    <LinearLayout android:id="@+id/fwelWelcomeLL"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/fwel_logo_FL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/fwelLanguageLL"
        android:orientation="vertical" android:visibility="invisible">
        
        <TextView android:id="@+id/fwel_welcome_TV"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:text="@string/welcome"
        	android:textSize="25sp"
        	android:textStyle="bold"
        	android:textColor="@color/white" />
    
    	<TextView android:id="@+id/fwel_name_TV"
        	android:layout_width="wrap_content"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:layout_gravity="center_horizontal"
	        android:gravity="center_vertical"
    	    android:text="Mario Rossi"
        	android:textSize="54sp"
        	android:textStyle="bold"
        	android:textColor="@color/white" />
    
    	<ImageView android:id="@+id/fwel_arrow_down_IV"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_horizontal"
        	android:src="@drawable/welcome_arrow_down"
        	android:contentDescription="@string/app_name" />
        
    </LinearLayout>
    
    <LinearLayout android:id="@+id/fwelLanguageLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fwel_bottom_V"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:orientation="horizontal" android:visibility="visible">
        
        <ImageButton android:id="@+id/fwelItalianIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/sel_button_ita"
            android:contentDescription="@string/content_description"
            android:background="@null" />

		<ImageButton android:id="@+id/fwelEnglishIB"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginLeft="16dp"
			android:src="@drawable/sel_button_eng"
			android:contentDescription="@string/content_description"
			android:background="@null" />

		<ImageButton android:id="@+id/fwelFrenchIB"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginLeft="16dp"
			android:src="@drawable/sel_button_fr"
			android:contentDescription="@string/content_description"
			android:background="@null" />
        
    </LinearLayout>
    <LinearLayout android:id="@+id/fwelBannerLL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/fwel_logo_FL" android:layout_centerHorizontal="true" android:layout_marginTop="80dp" android:orientation="vertical"
		android:visibility="gone">
        <TextView android:id="@+id/tvCarPlate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ED06218" android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="96sp"/>

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="11/02/2016   22:05"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvFleet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp" />

    </LinearLayout>
    <TextView android:id="@+id/tvVersion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/fwel_bottom_V" android:layout_alignParentRight="true" android:text="-" android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="#000"/>
    
</RelativeLayout>
