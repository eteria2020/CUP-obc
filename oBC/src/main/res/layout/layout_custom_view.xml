<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_layout"
    android:layout_width="280dp"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/customView"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:src="@drawable/gift_callout_rev"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxWidth="200dp"
        android:onClick="calloutShowCode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LA QUINTESSENZA a a a a a a a a\nVIA NOMENTANA 451"
        android:id="@+id/customTitleTV"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:maxLines="2"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:onClick="calloutShowCode"
        android:layout_alignLeft="@+id/customView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="8dp"
        android:layout_marginRight="28dp"
        android:maxWidth="180dp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text=" IN REGALO UNA POCHETTE CON CAMPIONICINI COSMESI IN OMAGGIO e questi sono per riempire lo spazio rimasto bla bla bla wow c&apos;Ã¨ ancora un po&apos; di spazio"
        android:id="@+id/customDescTV"
        android:textSize="18dp"
        android:layout_below="@+id/customTitleTV"
        android:layout_alignLeft="@+id/customView"
        android:layout_marginLeft="26dp"
        android:maxLines="4"
        android:maxWidth="180dp"
        android:textColor="@color/white"
        android:onClick="calloutShowCode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_alignRight="@+id/customView"
        android:gravity="center_horizontal" />

</RelativeLayout>