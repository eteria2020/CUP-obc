<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090808" >

    <View android:id="@+id/fpin_top_V"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentTop="true"
        android:background="#fdee66" />
    
    <View android:id="@+id/fpin_bottom_V"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:background="#fdee66" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fpin_bottom_V"
        android:layout_below="@+id/fpin_top_V"
        android:baselineAligned="false"
        android:weightSum="100"
        android:orientation="horizontal" >
        
        <RelativeLayout 
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
			android:layout_weight="56" >
        
            <TextView android:id="@+id/fpinMessageTV"
 		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:layout_marginLeft="44dp"
		        android:layout_marginStart="44dp"
        		android:text="@string/pin_type"
        		android:textSize="34sp"
        		android:textStyle="bold"
        		android:textColor="#fdee66" />
            
            <FrameLayout android:id="@+id/fpin_middle_row_FL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fpinMessageTV" >
                
                <LinearLayout 
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_gravity="center"
                	android:orientation="vertical" >
	                
                	<LinearLayout 
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
    	                android:orientation="horizontal" >
	                    
                    	<Button android:id="@+id/fpinOneB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_1"
            				android:textColor="@color/black"
            				android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                    	<Button android:id="@+id/fpinTwoB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_2"
            				android:textColor="@color/black"
            				android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                    	<Button android:id="@+id/fpinThreeB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_3"
            				android:textColor="@color/black"
            				android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                    	<Button android:id="@+id/fpinFourB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_4"
            				android:textColor="@color/black"
            				android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                	</LinearLayout>
	                
                	<LinearLayout 
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:orientation="horizontal" >
	                    
                    	<Button android:id="@+id/fpinFiveB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_5"
            				android:textColor="@color/black"
            				android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                    	<Button android:id="@+id/fpinSixB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_6"
            				android:textColor="@color/black"
            				android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                    	<Button android:id="@+id/fpinSevenB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_7"
            				android:textColor="@color/black"
            				android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                    	<Button android:id="@+id/fpinEightB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_8"
            				android:textColor="@color/black"
            				android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                	</LinearLayout>
	                
                	<LinearLayout 
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:orientation="horizontal" >
	                    
                    	<Button android:id="@+id/fpinNineB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_9"
            				android:textColor="@color/black"
            				android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                    	<Button android:id="@+id/fpinZeroB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:text="@string/number_0"
            				android:textColor="@color/black"
	            			android:textSize="68sp"
            				android:textStyle="bold"
            				android:background="@drawable/sel_button_pin" />
	                    
                    	<ImageButton android:id="@+id/fpinDeleteIB"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				android:src="@drawable/sel_button_delete"
            				android:contentDescription="@string/content_description"
            				android:background="@null" />
	                    
                	</LinearLayout>
                	
            	</LinearLayout>
                
                
            </FrameLayout>
            
            <LinearLayout android:id="@+id/fpin_bottom_row_LL"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_below="@+id/fpin_middle_row_FL"
		        android:layout_alignParentBottom="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
		        android:orientation="horizontal" >
                
                <TextView android:id="@+id/fpin_pin_is_TV"
 		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.69"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
        		android:text="@string/pin_message"
        		android:textSize="22sp"
        		android:textStyle="bold"
        		android:textColor="#FFFFFF" />

				<Button android:id="@+id/fpinFAQB"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:layout_margin="8dp"
					android:layout_gravity="center_vertical"
					android:background="@drawable/sel_button_faq" />

				<Button android:id="@+id/fpinSOSB"
            		android:layout_width="80dp"
            		android:layout_height="80dp"
            		android:layout_margin="8dp"
            		android:layout_gravity="center_vertical"
            		android:background="@drawable/sel_button_sos" />
                
            </LinearLayout>
            
        </RelativeLayout>
            
        <FrameLayout
			android:id="@+id/fpinRightFrame"
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
			android:layout_weight="44"
        	android:background="#3ea447" >
        
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >
            
            	<LinearLayout 
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_marginBottom="15dp"
                	android:layout_gravity="center"
                	android:orientation="horizontal">
                	
                	<ImageView android:id="@+id/fpinFirstIV"
	                	android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_marginRight="15dp"
                		android:layout_marginEnd="15dp"
                		android:src="@drawable/img_pin_empty"
                		android:contentDescription="@string/content_description" />
	                
                	<ImageView android:id="@+id/fpinSecondIV"
	                	android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_marginLeft="15dp"
                		android:layout_marginStart="15dp"
                		android:src="@drawable/img_pin_empty"
                		android:contentDescription="@string/content_description" />
	                
            	</LinearLayout>
	            
            	<LinearLayout 
	                android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_marginTop="15dp"
                	android:layout_gravity="center"
                	android:orientation="horizontal">
	                
                	<ImageView android:id="@+id/fpinThirdIV"
	                	android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_marginRight="15dp"
                		android:layout_marginEnd="15dp"
                		android:src="@drawable/img_pin_empty"
                		android:contentDescription="@string/content_description" />
	                
                	<ImageView android:id="@+id/fpinFourthIV"
	                	android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_marginLeft="15dp"
                		android:layout_marginStart="15dp"
                		android:src="@drawable/img_pin_empty"
                		android:contentDescription="@string/content_description" />
	                
            	</LinearLayout>
            	
            </LinearLayout>
            
        </FrameLayout>
        
    </LinearLayout>
    
    <!--<Button android:id="@+id/fpinSOSB"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_gravity="center"
            	android:text="@string/sos"
            	android:textSize="42sp"
            	android:textStyle="bold"
            	android:textColor="@color/white"
            	android:background="@drawable/sel_button_sos" />-->
        
