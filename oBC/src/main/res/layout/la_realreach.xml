<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
	android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:background="#307B7E" android:orientation="vertical">
    <ImageView android:id="@+id/ivDamages" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_marginTop="12dp" android:background="@drawable/sha_roundedbox" android:padding="8dp" android:src="@drawable/ic_destination_advise_black"/>
    <TextView android:id="@+id/tv1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ivDamages" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="32dp" android:text="Vedi sulla mappa l'area raggiungibile con l'attuale autonomia dell'auto." android:textAppearance="?android:attr/textAppearanceLarge"/>
    <Button android:id="@+id/btnCloseRealReach" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_marginBottom="12dp" android:layout_marginRight="12dp" android:background="@drawable/sha_roundedbox" android:padding="24dp" android:text="10 sec" android:textSize="22sp"/>
    <Button android:id="@+id/btnSearch" android:layout_width="110dp" android:layout_height="wrap_content" android:layout_below="@+id/tv1" android:layout_marginLeft="12dp" android:layout_marginTop="60dp" android:background="@drawable/sha_roundedbox" android:drawableTop="@drawable/icon_search" android:padding="12dp" android:text="Cerca indirizzo" android:textSize="20sp"/>
    <Button android:id="@+id/btnFavorites" android:layout_width="110dp" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_below="@+id/tv1" android:layout_marginRight="12dp" android:layout_marginTop="60dp" android:background="@drawable/sha_roundedbox" android:drawableTop="@drawable/icon_favorite" android:padding="12dp" android:text="Cerca su mappa" android:textSize="20sp"/>

	

</RelativeLayout>
