<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginBottom="5dp" xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/black">

    <View android:id="@+id/fins_top_V"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentTop="true"
        android:background="#fdee66" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fins_top_V"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Maintenance page"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btnEndCharging"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tvTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="End charge"
        android:textSize="26sp" />

    <TextView android:id="@+id/tvEndCharging" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_alignTop="@+id/btnEndCharging" android:layout_marginLeft="26dp" android:layout_toRightOf="@+id/btnEndCharging" android:text="-" android:textAppearance="?android:attr/textAppearanceMedium"/>
    <Button android:id="@+id/finsNextIB" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/fins_bottom_V" android:layout_alignParentRight="true" android:layout_marginBottom="10dp" android:layout_marginRight="10dp" android:background="@drawable/button_next"/>
    
    <View android:id="@+id/fins_bottom_V"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:background="#fdee66" />
    
</RelativeLayout>
