<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <View android:id="@+id/ffaq_top_V"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentTop="true"
        android:background="#fdee66" />

    <View android:id="@+id/ffaq_bottom_V"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:background="#fdee66" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ffaq_top_V"
        android:layout_above="@+id/ffaq_bottom_V"
        android:layout_toLeftOf="@+id/ffaq_right_FL"
        android:layout_toStartOf="@+id/ffaq_right_FL"
        android:orientation="vertical" >


            <TextView
                android:id="@+id/ffaq_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="40dp"
                android:text="@string/pin_FAQ_Title"
                android:textColor="#feef79"
                android:textSize="55sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />


                <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:orientation="vertical" >
                    <LinearLayout android:id="@+id/fins_first_FAQ_LL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fbullet1"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center"
                            android:background="@drawable/img_circle_white"
                            android:gravity="center"
                            android:text="@string/number_1"
                            android:textColor="#FFFFFF"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/finsFAQ1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="start"
                            android:padding="8dp"
                            android:text="@string/pin_FAQ_1"
                            android:textColor="@color/white"
                            android:textSize="35sp" />

                    </LinearLayout>
                    <LinearLayout android:id="@+id/fins_second_FAQ_LL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/fins_first_FAQ_LL" android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fbullet2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center"
                            android:background="@drawable/img_circle_white"
                            android:gravity="center"
                            android:text="@string/number_2"
                            android:textColor="#FFFFFF"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/finsFAQ2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="start"
                            android:padding="8dp"
                            android:text="@string/pin_FAQ_2"
                            android:textColor="@color/white"
                            android:textSize="35sp" />

                    </LinearLayout>
                    <LinearLayout android:id="@+id/fins_third_FAQ_LL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/fins_second_FAQ_LL" android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fbullet3"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center"
                            android:background="@drawable/img_circle_white"
                            android:gravity="center"
                            android:text="@string/number_3"
                            android:textColor="#FFFFFF"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/finsFAQ3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="start"
                            android:padding="8dp"
                            android:text="@string/pin_FAQ_3"
                            android:textColor="@color/white"
                            android:textSize="35sp" />

                    </LinearLayout>

                </RelativeLayout>


    </LinearLayout>

    <FrameLayout android:id="@+id/ffaq_right_FL"
        android:layout_width="225dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/ffaq_top_V"
        android:layout_above="@+id/ffaq_bottom_V"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#3ea447" >

        <ImageButton android:id="@+id/ffaqCancelIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="25dp"
            android:src="@drawable/sel_button_cancel"
            android:contentDescription="@string/content_description"
            android:background="@null" />

    </FrameLayout>

</RelativeLayout>
